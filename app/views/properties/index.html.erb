<h1 class = "text-center">All Properties</h1>

<h1>Search by</h1>

<%= form_tag(properties_path, method: "get") do  %>
  <%= select_tag "property_type", options_from_collection_for_select(@category, "name", "name"), include_blank: "All Property Type", class: "btn btn-success dropdown-toggle" %>
  <%= select_tag "property_status", options_for_select([ "Rental", "Sold", "Sale" ]), include_blank: "All Property Status", class: "btn btn-success dropdown-toggle" %>
  <%= select_tag "city",  options_from_collection_for_select(city_selection, "city", "city"), include_blank: "All Cities", class: "btn btn-success dropdown-toggle" %>
  <%= submit_tag "search" , class: "btn btn-success " %>
<% end %>

<hr>

<% unless @property.empty? %>
  <div class = "flickr_pagination">
    <%= will_paginate @property, :container => false %>
  </div>
  <div class = "ui divided items">
    <% @property.each do |property| %>
    <div class = "item">
      <div class = "image">
        <% if property.property_image.attached? %>
          <%= image_tag(property.property_image) %>
        <% end %>
      </div>
      <div class = "content">
        <%= link_to property.property_type, property, class: "header" %>
        <div class = "meta">
          <span class = "home">By <%= property.owner_name %></span><br/>
          <span class = "home">Posted <%= time_ago_in_words(property.created_at) %></span>
        </div>
        <div class = "description">
          <p></p>
        </div>
        <div class = "extra">
          <div class = "ui label"><i class = "home icon"></i><%= property.property_status %></div>
          <span class = "home text-dark"><i class = "rupee sign icon green"></i><%= property.price %></span>

          <div class = "ui right floated primary button">
            <%= link_to "Show Details", property ,class: "text-white" %>
            <i class = "right chevron icon"></i>
          </div>
          <% if admin? %>
            <div class = "ui right floated primary button">
              <%= link_to "Approve", approve_property_path(property) ,class: "text-white", data: { confirm: "Are you sure you want to approve?" } %>
              <i class = "right chevron icon"></i>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>

<% else %>
  <h1>No Result Found</h1>
<% end %>
