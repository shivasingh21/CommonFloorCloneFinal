<h1 class="text-center">HELLO, <%= @user.username %></h1>

<table class="table">
  <tr>
    <th scope="col">User Name</th>
    <td scope="row"><%= @user.username %></td>
  </tr>
  <tr>
    <th scope="col">Email</th>
    <td scope="row"><%= @user.email %></td>
  </tr>
</table>
<% unless @user.provider.present? %>
  <div class="ui primary button">
    <%= link_to "Edit User Details", edit_user_path(@user) ,class: "text-white"%>
    <i class="right chevron icon"></i>
  </div>
<% end %>
<hr>
<% unless current_user.properties.empty? %>
  <h1>Your Properties </h1>
  <div class="ui divided items">
    <% current_user.properties.each do |property| %>
      <div class="item">
        <div class="image">
          <% if property.property_image.attached? %>
            <%= image_tag(property.property_image)%>
          <% end %>
        </div>
        <div class="content">
          <%= link_to property.property_type, property, class: "header" %>
          <div class="meta">
            <span class="home">By <%= property.owner_name %></span><br/>
            <span class="home">Posted <%= time_ago_in_words(property.created_at) %></span>
          </div>
          <div class="description">
            <p></p>
          </div>
          <div class="extra">
            <div class="ui label"><i class="home icon"></i><%= property.property_status%></div>
            <span class="home text-dark"><i class="rupee sign icon green"></i><%= property.price%></span>

            <div class="ui right floated primary button">
              <%= link_to "Show Details", property ,class: "text-white"%>
              <i class="right chevron icon"></i>
            </div>
            <% if admin? %>
              <div class="ui right floated primary button">
                <%= link_to "Approve", approve_property_path(property) ,class: "text-white"%>
                <i class="right chevron icon"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No Favorite Property Found</p>
<% end %>
<hr>
<h1>Your Favorite Properties </h1>

<% unless current_user.favorites.empty? %>
  <div class="ui divided items">
    <% current_user.favorites.each do |favorite| %>
      <div class="item">
        <div class="image">
          <% if favorite.property.property_image.attached? %>
            <%= image_tag(favorite.property.property_image)%>
          <% end %>
        </div>
        <div class="content">
          <%= link_to favorite.property.property_type, favorite.property, class: "header" %>
          <div class="meta">
            <span class="home">By <%= favorite.property.owner_name %></span><br/>
            <span class="home">Posted <%= time_ago_in_words(favorite.property.created_at) %></span>
          </div>
          <div class="description">
            <p></p>
          </div>
          <div class="extra">
            <div class="ui label"><i class="home icon"></i><%= favorite.property.property_status%></div>
            <span class="home text-dark"><i class="rupee sign icon green"></i><%= favorite.property.price%></span>

            <div class="ui right floated primary button">
              <%= link_to "Show Details", favorite.property ,class: "text-white"%>
              <i class="right chevron icon"></i>
            </div>
            <% if admin? %>
              <div class="ui right floated primary button">
                <%= link_to "Approve", approve_property_path(property) ,class: "text-white"%>
                <i class="right chevron icon"></i>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No Favorite Property Found</p>
<% end %>
<hr>
